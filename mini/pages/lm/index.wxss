/**index.wxss**/
page{
  background: #f2f2f2;
}
.indexpage{
  height: 100%;
  width: 100%;
}
swiper{
  width: 100%;
  height: 440rpx;
}
swiper image{
  width: 100%;
  height: 100%

}
.position-info{
  display: flex;
  justify-content: space-between;
  padding:20rpx;
  border-bottom: 1rpx solid #eee;
  align-items: center;
}
.left-icon{
  width: 30rpx;
  height:30rpx;
}
image{
  width: 100%;
  height: 100%;
}
.position-left{
  display: flex;
  font-size: 24rpx;
  align-items: center;
}
.left-icon{
  margin-right: 8rpx;
  color: #ddd;
}
.position-info .txt{
  font-size: 18px;
  margin-left: 8rpx;
}
.phone{
  width: 40rpx;
  height: 40rpx;
  padding:10rpx 10rpx 10rpx 30rpx;
  border-left: 1rpx solid #eee
}
.container{
  background: #fff;
  margin-top:12rpx;
}
.index-list{
  margin-top:12rpx;
  padding:20rpx;
  background: #fff;
}
.list-header{
  display: flex;
  justify-content: space-between;
}
.header-txt{
  font-size: 28rpx;
  font-weight: bold;
}
.header-more{
  font-size: 20rpx;
  color:#F55D54;
  font-weight: normal
}
.wares-box{
  display: flex;
  flex-wrap: wrap;
  margin-top:30rpx;
  justify-content: space-between;
  padding:0 20rpx;
}
.wares-list{
  width: 310rpx;
  height: 360rpx;
  border:1px solid #000;
  margin-bottom: 20rpx
}

/* userifo */
.userinfo-box{
  display: flex;
  position: fixed;
  top:50%;
  width: 80%;
  left: 50%;
  margin-left: -40%;
  margin-top:-150rpx;
  border-radius:8rpx;
  height: 300rpx;
  background: #fff;
  box-shadow: 5px 5px 5px #eee;
}